<layout>
  <data>
    <import type="android.view.View" />
    <variable
      name="fragment"
      type="com.google.android.gnd.ui.observationdetails.ObservationDetailsFragment" />
    <variable
      name="viewModel"
      type="com.google.android.gnd.ui.observationdetails.ObservationDetailsViewModel" />
  </data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:navigationBarColor="@color/colorGrey500"
    app:statusBarBackground="@color/colorGrey500">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <ProgressBar
        android:id="@+id/observation_details_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="48dp"
        android:visibility="@{safeUnbox(viewModel.isProgressBarVisible) ? View.VISIBLE : View.GONE }" />

      <!-- CardView is used to create the drop shadow effect -->
      <androidx.cardview.widget.CardView
        android:id="@+id/observation_details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/toolbar_elevation">

        <com.google.android.gnd.ui.common.TwoLineToolbar
          android:id="@+id/observation_details_toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:layout_gravity="top"
          android:theme="@style/WhiteToolbarTheme"
          app:subtitle="@{fragment.getFeatureSubtitle(viewModel.feature)}"
          app:title="@{fragment.getFeatureTitle(viewModel.feature)}" />

      </androidx.cardview.widget.CardView>

      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/observation_details_header"
        android:background="@color/colorBackground">

        <LinearLayout
          android:id="@+id/observation_details_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical" />

      </ScrollView>

    </RelativeLayout>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
